<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_actor_photo"
        android:layout_width="@dimen/actor_avatar_space"
        android:layout_height="@dimen/actor_avatar_space"
        android:contentDescription="@string/actor_avatar_content_desc"
        android:scaleType="fitStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars[0]" />

    <TextView
        android:id="@+id/tv_actor_avatar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/cast_title_white"
        android:textSize="@dimen/font_normal_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/iv_actor_photo"
        app:layout_constraintStart_toStartOf="@id/iv_actor_photo"
        app:layout_constraintTop_toBottomOf="@id/iv_actor_photo"
        tools:text="@tools:sample/full_names[0]" />
</androidx.constraintlayout.widget.ConstraintLayout>