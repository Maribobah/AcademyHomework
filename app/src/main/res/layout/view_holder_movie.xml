<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="285dp">

    <View
        android:id="@+id/v_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/movie_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_poster"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="48dp"
        android:contentDescription="@string/poster_image_desc"
        android:scaleType="fitXY"
        tools:src="@drawable/avengers_card"
        app:layout_constraintBottom_toBottomOf="@id/v_card"
        app:layout_constraintEnd_toEndOf="@id/v_card"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/v_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/iv_mask_poster"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/mask_poster"
        app:layout_constraintBottom_toBottomOf="@id/iv_poster"
        app:layout_constraintEnd_toEndOf="@id/v_card"
        app:layout_constraintStart_toStartOf="@id/v_card"
        app:layout_constraintTop_toTopOf="@id/iv_poster" />

    <TextView
        android:id="@+id/tv_rate"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rate_background"
        android:gravity="center"
        tools:text="@string/movie_rate_sample"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/v_card"
        app:layout_constraintTop_toTopOf="@id/v_card" />

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/like"
        android:src="@drawable/ic_like"
        app:layout_constraintEnd_toEndOf="@id/v_card"
        app:layout_constraintTop_toTopOf="@id/v_card" />

    <TextView
        android:id="@+id/tv_genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="22dp"
        android:lineSpacingExtra="3sp"
        tools:text="@string/movie_genre_sample"
        android:textColor="@color/activity_color"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_poster"
        app:layout_constraintEnd_toEndOf="@id/iv_poster"
        app:layout_constraintStart_toStartOf="@id/iv_poster" />

    <ImageView
        android:id="@+id/ic_star1"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:contentDescription="@string/star_icon_desc"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@id/ic_star2"
        app:layout_constraintStart_toStartOf="@id/tv_genre"
        app:layout_constraintTop_toBottomOf="@id/tv_genre"
        app:srcCompat="@drawable/ic_star"
        app:tint="@color/activity_color" />

    <ImageView
        android:id="@+id/ic_star2"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:contentDescription="@string/star_icon_desc"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@id/ic_star3"
        app:layout_constraintStart_toEndOf="@id/ic_star1"
        app:layout_constraintTop_toBottomOf="@id/tv_genre"
        app:srcCompat="@drawable/ic_star"
        app:tint="@color/activity_color" />

    <ImageView
        android:id="@+id/ic_star3"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:contentDescription="@string/star_icon_desc"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@id/ic_star4"
        app:layout_constraintStart_toEndOf="@id/ic_star2"
        app:layout_constraintTop_toBottomOf="@id/tv_genre"
        app:srcCompat="@drawable/ic_star"
        app:tint="@color/activity_color" />

    <ImageView
        android:id="@+id/ic_star4"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:contentDescription="@string/star_icon_desc"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@id/ic_star5"
        app:layout_constraintStart_toEndOf="@id/ic_star3"
        app:layout_constraintTop_toBottomOf="@id/tv_genre"
        app:srcCompat="@drawable/ic_star"
        app:tint="@color/activity_color" />

    <ImageView
        android:id="@+id/ic_star5"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="6dp"
        android:contentDescription="@string/star_icon_desc"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@id/tv_review"
        app:layout_constraintStart_toEndOf="@id/ic_star4"
        app:layout_constraintTop_toBottomOf="@id/tv_genre"
        app:srcCompat="@drawable/ic_star"
        app:tint="@color/review_color" />

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        tools:text="@string/movie_reviews_sample"
        android:textColor="@color/review_color"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/tv_genre"
        app:layout_constraintStart_toEndOf="@id/ic_star5"
        app:layout_constraintTop_toBottomOf="@id/tv_genre" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:gravity="start"
        tools:text="@string/movie_title_sample"
        android:textColor="@color/title_white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/v_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/v_card"
        app:layout_constraintTop_toBottomOf="@+id/iv_poster" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3sp"
        tools:text="@string/movie_duration_sample"
        android:textColor="@color/duration_color"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/v_card"
        app:layout_constraintStart_toStartOf="@id/v_card"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

</androidx.constraintlayout.widget.ConstraintLayout>